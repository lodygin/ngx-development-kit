{
  "name": "ngx-development-kit",
  "version": "2.4.0",
  "description": "It is a library of tools designed to accelerate the development of Angular applications.",
  "homepage": "https://github.com/lodygin/ngx-development-kit#readme",
  "bugs": {
    "url": "https://github.com/lodygin/ngx-development-kit/issues"
  },
  "license": "MIT",
  "author": "Alexander Lodygin <lodigin.alexander@gmail.com>",
  "repository": "git@github.com:lodygin/ngx-development-kit.git",
  "keywords": [
    "utils",
    "tools",
    "CDK",
    "kit",
    "Angular",
    "pipe",
    "service",
    "directive",
    "RxJS",
    "destroy",
    "let",
    "module",
    "trackBy",
    "ngFor"
  ],
  "workspaces": [
    "dist/ngx-development-kit"
  ],
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "jest": "jest --coverage",
    "test:ci": "npm run jest -- --ci --runInBand",
    "lint": "ng lint",
    "package:sync": "node scripts/sync-package-keys.js",
    "docs:copy": "cp LICENSE README.md dist/ngx-development-kit/",
    "publish:prepare": "npm run docs:copy & npm run package:sync"
  },
  "dependencies": {
    "@angular/animations": "^15.1.0",
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/router": "^15.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.6",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "~15.1.6",
    "@angular/compiler-cli": "^15.1.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-preset-angular": "^13.0.0",
    "lint-staged": "^13.1.2",
    "ng-packagr": "^15.1.0",
    "prettier": "2.8.4",
    "typescript": "~4.9.4"
  }
}
